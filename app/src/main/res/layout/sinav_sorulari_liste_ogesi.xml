<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF6F6">

    <androidx.cardview.widget.CardView
        android:id="@+id/sinav_SoruCardView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#575656"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_sinavSoruID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:editable="false"
                android:text="Soru ID:"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/sinav_txtSoruMetni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Soru Metnini Giriniz"
                android:inputType="textMultiLine"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinav_imageViewSoruResmi" />

            <EditText
                android:id="@+id/sinav_soru_txtSik1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="(ZORUNLU) İkinci Şıkkı Giriniz"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toTopOf="@+id/sinav_soru_txtSik2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinav_soru_txtSik0" />

            <EditText
                android:id="@+id/sinav_soru_txtSik2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Üçüncü Şıkkı Giriniz"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toTopOf="@+id/sinav_soru_txtSik3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinav_soru_txtSik1" />

            <EditText
                android:id="@+id/sinav_soru_txtSik3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Dördüncü Şıkkı Giriniz"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toTopOf="@+id/sinav_soru_txtSik4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinav_soru_txtSik2" />

            <EditText
                android:id="@+id/sinav_soru_txtSik4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Beşinci Şıkkı Giriniz"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinav_soru_txtSik3" />

            <EditText
                android:id="@+id/sinav_soru_txtSik0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="(ZORUNLU) Birinci Şıkkı Giriniz"
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toTopOf="@+id/sinav_soru_txtSik1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinav_txtSoruMetni" />

            <TextView
                android:id="@+id/sinav_txt_soruID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:editable="false"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/lbl_sinavSoruID"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioGroup
                android:id="@+id/sinav_radbuttongr_siklar"
                android:layout_width="190dp"
                android:layout_height="243dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toEndOf="@+id/sinav_soru_txtSik4"
                app:layout_constraintTop_toBottomOf="@+id/sinav_txtSoruMetni">

                <RadioButton
                    android:id="@+id/sinav_radbutton_sik0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="0"
                    android:textSize="0sp" />

                <RadioButton
                    android:id="@+id/sinav_radbutton_sik1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="1"
                    android:textSize="0sp" />

                <RadioButton
                    android:id="@+id/sinav_radbutton_sik2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="2"
                    android:textSize="0sp" />

                <RadioButton
                    android:id="@+id/sinav_radbutton_sik3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="3"
                    android:textSize="0sp" />

                <RadioButton
                    android:id="@+id/sinav_radbutton_sik4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:text="4"
                    android:textSize="0sp" />
            </RadioGroup>

            <ImageView
                android:id="@+id/sinav_imageViewSoruResmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sinav_soruEkle"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <Button
                android:id="@+id/sinav_soruEkle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="5dp"
                android:background="#FA0000"
                android:backgroundTint="#FF0000"
                android:onClick="sinavSoruSec"
                android:text="X"
                android:textColorLink="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>